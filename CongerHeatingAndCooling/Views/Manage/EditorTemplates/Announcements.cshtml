@using CHC.Entities.Announcements
@model IList<Announcement>

@if ( Model.Count() == 0 ) {
    Model.Add( new Announcement {
        StartDate = DateTime.Now    
    } );
}

@for ( int i = 0; i < Model.Count(); i++ ) {

<div class="row">
    <div class="large-12 columns">
        <div class="panel transparent">
            <div class="row">
                @Html.HiddenFor( m => Model[i].ID )
                <div class="large-4 columns">
                    <h3>Title</h3>
                    @Html.TextBoxFor( m => Model[i].Title, new { @required = "" } )
                    <small class="error">Please enter a title for your announcement.</small>
                </div>
                <div class="large-8 columns">
                    <h3>Description</h3>
                    @Html.TextBoxFor( m => Model[i].Content, new { @required = "" } )
                    <small class="error">Please enter the description for your announcement.</small>
                </div>
            </div>
            <div class="row">
                <div class="large-3 columns">
                    <h3>Effective Date</h3>
                    @Html.TextBoxFor( m => Model[i].StartDate, new { @required = "", @date = "" } )
                    <small class="error">Please enter day the announcement should take effect.</small>
                </div>
                <div class="large-3 columns">
                    <h3>Turn Off By:</h3>
                    @Html.TextBoxFor( m => Model[i].EndDate, new { @date = "" } )
                    <small class="error">Please enter the date the announcment should stop.</small>
                </div>
                <div class="large-3 columns">
                    <h3>Show Alert</h3>
                    @Html.CheckBoxFor( m => Model[i].IsAlert )
                </div>
                <div class="large-3 columns">
                </div>
            </div>
        </div>
    </div>
</div>
}
