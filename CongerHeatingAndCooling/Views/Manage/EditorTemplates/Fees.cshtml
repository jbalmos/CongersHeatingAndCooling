@using CHC.Entities.Services.OilDelivery
@model IList<PriceLevelFee>

@if (Model.Count() == 0)
{
    Model.Add(new PriceLevelFee
    {
        OilDeliveryPriceLevelID = Int32.Parse(ViewData["OilDeliveryPriceLevelID"].ToString())
    });
}

@for (int i = 0; i < Model.Count(); i++)
{

<div class="row">
    <div class="large-12 columns">
        <div class="panel transparent">
            <h1>Additional Fee</h1>
            <a class="close-reveal-modal">&#215;</a>
            <div class="row fee">
                @Html.HiddenFor(m => Model[i].ID)
                @Html.HiddenFor(m => Model[i].OilDeliveryPriceLevelID)
                <div class="large-10 columns">
                    @Html.TextBoxFor(m => Model[i].Description)
                    <small class="error">Please enter a description for this fee.</small>
                </div>
                <div class="large-2 columns">
                    @Html.TextBoxFor(m => Model[i].Fee)
                    <small class="error">Please enter the cost for this fee.</small>
                </div>
            </div>
            <div class="row fee">
                <div class="large-12 columns text-center">
                    <a class="button custom-close-reveal-modal">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>
}
