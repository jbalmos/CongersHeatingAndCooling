@using CHC.Entities.Office
@model IList<OfficeHour>

@for ( int i = 0; i < Model.Count(); i++ ) {

<div class="row">
    <div class="large-12 columns">
        <div class="panel transparent">
            <div class="row">
                @Html.HiddenFor( m => Model[i].ID )
                @Html.HiddenFor( m => Model[i].OfficeID )
                @Html.HiddenFor( m => Model[i].DayOfWeek )
                <div class="large-3 columns">
                    <h3>@Html.Raw( Model[i].DayOfWeek.ToString( "f" ) )</h3>
                </div>
                <div class="large-2 columns">
                    @Html.TextBoxFor( m => Model[i].OpeningTime, new { @type= "time" } )
                </div>
                <div class="large-2 columns">
                    @Html.TextBoxFor( m => Model[i].ClosingTime, new { @type = "time" } )
                </div>
                <div class="large-5 columns">
                </div>
            </div>
        </div>
    </div>
</div>
}
